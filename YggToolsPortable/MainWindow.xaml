<Window x:Class="YggToolsPortable.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YggToolsPortable"
        mc:Ignorable="d"
        Title="YggToolsPortable" Height="429.247" Width="1172">
    <Grid>
        <TabControl Height="AUTO" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="AUTO" Margin="10,35,10,10">
            <TabItem Header="Torrent Downloader">
                <Grid Background="#FFE5E5E5">

                    <ListBox Height="AUTO" Name="lbTodoList" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="AUTO" Margin="10,27,10,38">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,2" >
                                    <Grid.Resources>
                                        <ContextMenu x:Key="ContextMenu">
                                            <MenuItem Header="Start/Resume" Click="MenuItem_Click"></MenuItem>
                                            <MenuItem Header="Pause"></MenuItem>
                                            <MenuItem Header="Delete"></MenuItem>
                                        </ContextMenu>
                                    </Grid.Resources>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="100" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Width="650" Text="{Binding Title}" ContextMenu="{DynamicResource ResourceKey=ContextMenu}"/>
                                    <ProgressBar Grid.Column="1" Width="200" Minimum="0" Maximum="100" Value="{Binding Completion}" Name="pbStatus" Margin="0,0,-100,0" />
                                    <TextBlock Grid.Column="1" Width="113" Text="{Binding ElementName=pbStatus, Path=Value, StringFormat={}{0:0}%}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="87,0,-100,0" />
                                    <TextBlock Width="Auto" Text="{Binding DownSpeed}" Margin="233,0,-233,0" Grid.ColumnSpan="1" Grid.Column="1" />
                                    <TextBlock Width="Auto" Text="{Binding UpSpeed}" Margin="333,0,-361,0" Grid.ColumnSpan="1" Grid.Column="1" />

                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Button x:Name="btn_addTorrent" Content="Add Torrent" Margin="10,0,0,10" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="121" RenderTransformOrigin="0.331,12" Click="btn_addTorrent_Click"/>
                    <TextBlock Text="Name" Margin="302,0,465,303" />
                    <TextBlock Text="Progress" Margin="740,0,0,303" />
                    <TextBlock Text="Down Speed" Margin="885,0,0,303" />
                    <TextBlock Text="Up Speed" Margin="992,0,0,303" />
                </Grid>
            </TabItem>
            <TabItem Header="Torrent Browser">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="DgOrderCount" Grid.Row="0" Grid.Column="0" AutoGenerateColumns="False" CanUserAddRows="False" ItemsSource="{Binding}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Employee Name"  Binding="{Binding EmployeeName}" Width="120"/>
                            <DataGridTemplateColumn Header="Orders Count" Width="380">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <ProgressBar Grid.Row="0" Grid.Column="0"  Minimum="0" Maximum="200" Value="{Binding OrderCounts,Mode=OneWay}" ToolTip="{Binding OrderCounts,Mode=OneWay}">
                                            </ProgressBar>
                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding OrderCounts,Mode=OneWay}" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="User Information">
                <Grid Background="#FFE5E5E5">
                    <Label x:Name="label" Content="Nickname : " HorizontalAlignment="Left" Margin="151,50,0,0" VerticalAlignment="Top" Width="76"/>
                    <TextBox x:Name="txt_nick" HorizontalAlignment="Left" Height="23" Margin="232,54,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="331"/>
                    <Button x:Name="button" Content="Update Information" HorizontalAlignment="Left" Margin="584,54,0,0" VerticalAlignment="Top" Width="123" Height="23"/>
                    <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="232,97,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
                    <TextBox x:Name="textBox_Copy" HorizontalAlignment="Left" Height="23" Margin="232,137,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
                    <TextBox x:Name="textBox_Copy1" HorizontalAlignment="Left" Height="23" Margin="232,178,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
                    <TextBox x:Name="textBox_Copy2" HorizontalAlignment="Left" Height="23" Margin="232,219,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="331"/>
                    <Label x:Name="label_Copy" Content="Download : " HorizontalAlignment="Left" Margin="151,94,0,0" VerticalAlignment="Top" Width="76"/>
                    <Label x:Name="label_Copy1" Content="Upload : " HorizontalAlignment="Left" Margin="167,137,0,0" VerticalAlignment="Top" Width="60"/>
                    <Label x:Name="label_Copy2" Content="Ratio : " HorizontalAlignment="Left" Margin="178,178,0,0" VerticalAlignment="Top" Width="49"/>
                    <Label x:Name="label_Copy3" Content="Save Path : " HorizontalAlignment="Left" Margin="156,219,0,0" VerticalAlignment="Top" Width="71"/>
                </Grid>
            </TabItem>
        </TabControl>
        <StackPanel Height="AUTO" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="AUTO" Margin="17,35,17,331">
            <Grid Margin="0,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>

            </Grid>
        </StackPanel>
    
    </Grid>
</Window>
